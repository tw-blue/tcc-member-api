<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8">
    <title>Login 1. TC Chemnitz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            flex-wrap: wrap;
            align-content: center;
            background-color: azure;
        }
    </style>
    <link type="text/css" rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'" href="https://www.gstatic.com/firebasejs/ui/6.1.0/firebase-ui-auth.css" />
    <noscript><link rel="stylesheet" href="https://www.gstatic.com/firebasejs/ui/6.1.0/firebase-ui-auth.css"></noscript>
    <script src="https://www.gstatic.com/firebasejs/10.0.0/firebase-app-compat.js" defer></script>
-    <script src="https://www.gstatic.com/firebasejs/10.0.0/firebase-auth-compat.js" defer></script>
-    <script src="https://www.gstatic.com/firebasejs/ui/6.1.0/firebase-ui-auth__de.js" defer></script>
     
    <script type="text/javascript" defer>
        window.onpageshow = function () {
            init()
        }
        async function init() {
            const response = await fetch("/firebase-config.json")
            const firebaseConfig = await response.json();
            const app = firebase.initializeApp(firebaseConfig);
            firebase.auth().setPersistence(firebase.auth.Auth.Persistence.NONE);
            
            var uiConfig = {
                callbacks: {
                    signInSuccessWithAuthResult: function (authResult, redirectUrl) {
                        //TODO show loading to user while performing login
                        if (authResult.additionalUserInfo.isNewUser) {//Email verification required for MFA
                            authResult.user.sendEmailVerification()
                                .then(() => {
                                    // Email verification sent!
                                    console.log("sent");
                                });
                        }
                        authResult.user.getIdToken().then(idToken => {
                            fetch("/sessionLogin", {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/x-www-form-urlencoded',
                                },
                                body: `idToken=${idToken}&_csrf=<%= csrfToken %>`,
                            }).then((result) => {
                                console.dir(result);
                                window.location.assign('/home');
                            });
                        });


                        return false;//wait for the session fetch to complete
                    },
                    signInFailure: error => handleUIError(error),
                    uiShown: () => document.getElementById('loader').style.display = 'none'
                },
                signInFlow: 'redirect',
                signInOptions: [
                    {
                        provider: firebase.auth.EmailAuthProvider.PROVIDER_ID,
                        requireDisplayName: true
                    }
                ],
                tosUrl: '<your-tos-url>',
                privacyPolicyUrl: 'https://taekwondo-chemnitz.de/datenschutzerklaerung/'
            };

            var ui = new firebaseui.auth.AuthUI(firebase.auth());
            ui.start('#firebaseui-auth-container', uiConfig);
        }
    </script>
</head>
<body>
